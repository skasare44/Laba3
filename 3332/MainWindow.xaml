            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                            <RotateTransform Angle="91" CenterY="0.5" CenterX="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFF3D200" Offset="0"/>
                    <GradientStop Color="#FFE45353" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Button x:Name="newGame" Content="Новая игра" HorizontalAlignment="Left" Margin="170,45,0,0" VerticalAlignment="Top" Width="450" Height="97" Click="Button_Click_2" FontSize="48"/>
        <Button x:Name="LoadGame" Content="Загрузить" HorizontalAlignment="Left" Margin="170,152,0,0" VerticalAlignment="Top" Width="450" Height="97" Click="LoadGame_Click" FontSize="48"/>

    </Grid>
</Window>
