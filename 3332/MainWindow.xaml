        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="MainWindow" Height="355" Width="800" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="gradient-grainy-gradient-texture_79603-1642.jpg"/>
        </Grid.Background>
        <Button Content="Выход" HorizontalAlignment="Left" Height="51" Margin="34,265,0,0" VerticalAlignment="Top" Width="166" Click="Button_Click_3"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="47" Margin="10,10,0,0" VerticalAlignment="Top" Width="228" Background="White"/>

        <Label Content="Дата:" HorizontalAlignment="Left" Height="35" Margin="34,10,0,0" VerticalAlignment="Top" Width="57" FontSize="20"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="133" Margin="12,67,0,0" VerticalAlignment="Top" Width="226" Background="White">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="78" Margin="137,35,0,0" VerticalAlignment="Top" Width="1"/>
        </Border>
        <Label Content="Деньги:" Margin="14,94,716,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="62"/>
        <Label Content="Статус:" Margin="14,108,728,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="49"/>
        <Label Content="Семейное положение:" Margin="15,122,642,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="137"/>
        <Label Content="Настроение:" Margin="14,134,682,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="97"/>
        <Label Content="Сытость:" Margin="15,146,683,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="97"/>
        <Label Content="Дресировка:" Margin="15,159,682,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="97"/>
        <Label x:Name="MoneyLabel" Content="100" Margin="151,96,518,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="125"/>
