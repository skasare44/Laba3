        <Button Content="Подработка" HorizontalAlignment="Left" Height="35" Margin="572,50,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click4"/>
        <Button x:Name="FindFemale" Content="Найти самку (7000 рублей)" HorizontalAlignment="Left" Height="35" Margin="572,210,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click5"/>
