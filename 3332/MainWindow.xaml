        <Label x:Name="Sp" Content="Холост" Margin="151,122,518,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="125"/>
        <Label x:Name="MoodLabel" Content="50" Margin="152,134,518,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="124"/>
        <Label x:Name="HungryLabel" Content="50" Margin="151,146,519,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="124"/>
        <Label x:Name="Dres" Content="Дикий" Margin="151,159,520,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="123"/>
        <Button Content="Работа" HorizontalAlignment="Left" Height="35" Margin="572,10,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click"/>
        <Label Content="Личный статус" Margin="12,67,0,0" Background="{x:Null}" Foreground="Blue" FontSize="14" HorizontalAlignment="Left" Width="140" Height="27" VerticalAlignment="Top"/>
        <Label x:Name="DataLabel" Content="01.01.2000" HorizontalAlignment="Left" Height="35" Margin="91,10,0,0" VerticalAlignment="Top" Width="147" FontSize="20"/>
        <Button Content="Питание" HorizontalAlignment="Left" Height="35" Margin="572,90,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click1"/>
        <Button Content="Развлечения" HorizontalAlignment="Left" Height="35" Margin="572,130,0,0" VerticalAlignment="Top" Width="194" Click="Button_Click2"/>
